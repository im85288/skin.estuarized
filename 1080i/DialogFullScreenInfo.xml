				<align>left</align>
				<aligny>center</aligny>
				<font>skybold33</font>
			</control>
			<control type="label">
				<left>890</left>
				<top>-204</top>
				<width>640</width>
				<height>33</height>
				<label fallback="">$INFO[VideoPlayer.Title]</label>
