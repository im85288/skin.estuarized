				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<control type="label">
					<width>100</width>
					<height>30</height>
					<label fallback="">$INFO[VideoPlayer.StartTime]</label>
					<align>left</align>
					<font>sky33</font>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
			</control>
			<control type="grouplist">
				<left>420</left>
				<top>45</top>
				<width>434</width>
				<height>30</height>
				<align>right</align>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
