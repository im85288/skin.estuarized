							<height>70</height>
							<width>1350</width>
							<aligny>center</aligny>
							<font>sky28</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>0</left>
							<textoffsetx>15</textoffsetx>
							<top>0</top>
							<height>70</height>
							<width>1350</width>
							<align>right</align>
							<aligny>center</aligny>
							<font>sky25</font>
							<label>$INFO[ListItem.Date]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</itemlayout>
				</control>
				<control type="group">
