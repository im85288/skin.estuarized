					<left>-499</left>
					<control type="videowindow">
						<width>480</width>
						<height>290</height>
						<visible>Player.HasVideo</visible>
					</control>
					<control type="image">
						<width>480</width>
						<height>290</height>
						<aspectratio>keep</aspectratio>
						<fadetime>400</fadetime>
						<texture fallback="special://skin/extras/home-images/tv.jpg">$INFO[Container(50).ListItem.Icon]</texture>
						<visible>!Player.HasVideo</visible>
					</control>
				</control>
				<control type="group">
					<control type="group">
						<top>-20</top>
						<control type="group">
							<control type="label">
								<width>1040</width>
								<height>40</height>
								<align>left</align>
								<font>sky40</font>
								<label>$INFO[ListItem.Title]</label>
								<!--<label>$INFO[ListItem.StartTime,, - ]$INFO[ListItem.EndTime]$INFO[ListItem.Title,  [COLOR grey],[/COLOR]]$INFO[ListItem.Genre,      $LOCALIZE[515] : [COLOR grey],[/COLOR]]</label> -->
							</control>
							<control type="textbox">
								<top>51</top>
								<width>1040</width>
								<height>120</height>
								<align>left</align>
								<font>sky28</font>
								<label>$VAR[PVRPlot]</label>
								<autoscroll delay="10000" time="3000" repeat="10000"/>
							</control>
							<control type="label">
								<description>Disk usage text</description>
								<top>190</top>
								<width>600</width>
								<height>20</height>
								<label>$INFO[PVR.backenddiskspace]</label>
								<shadowcolor>black</shadowcolor>
								<font>sky24</font>
								<visible>!Integer.IsGreater(PVR.backenddiskspaceprogr,100)</visible>
							</control>
							<control type="progress">
								<description>Disk usage bar</description>
								<left>640</left>
								<top>203</top>
								<width>400</width>
								<height>12</height>
								<info>PVR.backenddiskspaceprogr</info>
								<visible>!Integer.IsGreater(PVR.backenddiskspaceprogr,100)</visible>
							</control>
						</control>
					</control>
					<control type="group">
						<visible>!IsEmpty(Container(50).ListItem.Date)</visible>
						<top>-20</top>
						<left>1050</left>
						<control type="group">
							<control type="image">
								<width>1</width>
								<top>51</top>
								<height>130</height>
								<texture flipy="true">skyq/Backgrounds/line-h.png</texture>
							</control>
							<control type="image">
								<top>33</top>
								<left>180</left>
								<width>100</width>
								<height>140</height>
								<aspectratio>keep</aspectratio>
								<fadetime>400</fadetime>
								<texture>http://localhost:52307/getpvrthumb&amp;title=$INFO[Container(50).ListItem.Title]&amp;channel=$INFO[Container(50).ListItem.ChannelName]&amp;type=poster</texture>
							</control>
							<control type="image">
								<top>33</top>
								<left>180</left>
								<width>100</width>
								<height>140</height>
								<aspectratio>keep</aspectratio>
								<fadetime>400</fadetime>
								<texture>$INFO[Window(Home).Property(SkinHelper.PVR.Poster)]</texture>
							</control>
							<control type="image">
								<top>54</top>
								<left>20</left>
								<width>100</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<fadetime>400</fadetime>
								<texture>$INFO[Window(Home).Property(SkinHelper.PVR.ClearLogo)]</texture>
								<visible>!IsEmpty(Window(Home).Property(SkinHelper.PVR.ClearLogo))</visible>
							</control>
							<control type="image">
								<top>54</top>
								<left>20</left>
								<width>100</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<fadetime>400</fadetime>
								<texture>$INFO[Container(50).ListItem.Icon]</texture>
								<visible>IsEmpty(Window(Home).Property(SkinHelper.PVR.ClearLogo))</visible>
							</control>
							<control type="label">
								<top>120</top>
								<left>20</left>
								<width>300</width>
								<height>30</height>
								<font>sky24</font>
								<align>left</align>
								<label>$INFO[Container(50).ListItem.Duration]</label>
								<!--<label>$INFO[ListItem.StartTime,, - ]$INFO[ListItem.EndTime]$INFO[ListItem.Title,  [COLOR grey],[/COLOR]]$INFO[ListItem.Genre,      $LOCALIZE[515] : [COLOR grey],[/COLOR]]</label> -->
							</control>
							<control type="label">
								<top>150</top>
								<left>20</left>
								<width>300</width>
								<height>30</height>
								<font>sky20</font>
								<align>left</align>
