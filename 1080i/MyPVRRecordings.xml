							<height>70</height>
							<width>1350</width>
							<aligny>center</aligny>
							<scroll>true</scroll>
							<font>sky28</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>0</left>
							<textoffsetx>15</textoffsetx>
							<top>0</top>
							<height>70</height>
							<width>1350</width>
							<align>right</align>
							<aligny>center</aligny>
							<font>sky25</font>
							<label>$INFO[ListItem.Date]</label>
						</control>
					</focusedlayout>
					<itemlayout height="70">
						<control type="image">
							<width>1350</width>
							<height>1</height>
							<texture>skyq/Backgrounds/line-h.png</texture>
						</control>
						<control type="image">
